{
    "name" :"Mute Any Tab",
    "version": "0.1.0",
    "description": "Uses Key Shortcuts to Mute Tabs",
    "permissions": ["tabs", "storage"],
    "background": {
        "service_worker" : "background.js"
    },
    "content_scripts" : [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScripts.js"]
        }
    ],
    "action": {
    "default_title": "Mute Any Tab",
    "default_popup": "popup.html"
    },
    "commands": {
        "toggle-mute": {
            "original_key": {
                "default": "Ctrl+M",
                "mac": "Command+M"
            },
            "description": "Toggles Mute and Unmute Using Key Shortcut"
        }
    },
    "manifest_version" : 3
}